{
  "compilerOptions": {
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable",
      "deno.ns"
    ]
  },
  "lint": {
    "rules": {
      "exclude": ["require-await"]
    }
  },
  "fmt": {
    "options": {
      "lineWidth": 120
    }
  },
  "tasks": {
    "bundle": "deno bundle --watch mods/client/main.ts mods/client-public/scripts/main.js",
    "server": "deno run -A --watch mods/server/index.ts",
    "serve": "serve mods/client-public"
  }
}
