{
  "imports": {
    "@acme/": "./mods/qcmf5/mods/"
  },
  "compilerOptions": {
    
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable",
      "deno.ns"
    ]
  },
  "lint": {
    "exclude": [
      "**/dist/*.js"
    ],
    "rules": {
      "exclude": [
        "require-await"
      ]
    }
  },
  "fmt": {
    "options": {
      "lineWidth": 120
    }
  },
  "tasks": {
    "server": "deno run -A --watch mods/app-server/entry.ts",
    "serve": "deno run -A --watch mods/app-client/bin/esbuild-dev.ts"
  }
}
