{
  "compilerOptions": {
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable",
      "deno.ns"
    ]
  },
  "lint": {
    "rules": {
      "exclude": ["require-await"]
    }
  },
  "fmt": {
    "options": {
      "lineWidth": 120
    }
  },
  "tasks": {
    "server": "deno run -A --watch app-server/entry.ts",
    "serve": "deno run -A --watch app-client/bin/esbuild-dev.ts"
  }
}
